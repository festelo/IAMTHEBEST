<ScrollPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Test1.ControllerTest1">
    <content>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="394.0" minWidth="10.0" percentWidth="30.0" prefWidth="315.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <ListView prefHeight="200.0" prefWidth="200.0" fx:id="ListViewWords" onMouseClicked="#ListViewClicked"/>
                <ListView prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" fx:id="ListViewTranslates" onMouseClicked="#ListViewClicked"/>
                <TableView prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" fx:id="tableView">
                    <columns>
                        <TableColumn prefWidth="120.0" text="Слово" fx:id="tableViewWord"/>
                        <TableColumn prefWidth="120.0" text="Перевод" fx:id="tableViewTranslate"/>
                    </columns>
                </TableView>
            </children>
        </GridPane>
    </content>
</ScrollPane>
